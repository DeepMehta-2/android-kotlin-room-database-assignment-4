<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/sixteen_dp"
    tools:context=".OrderDetailsActivity">

    <TextView
        android:id="@+id/phoneName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/twenty_dp"
        android:textStyle="bold"
        tools:text="Iphone 14 Pro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phoneColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_dp"
            tools:text="Space Black" />

        <TextView
            android:id="@+id/phoneStorage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sixteen_dp"
            tools:text="256 GB" />

    </LinearLayout>

    <TextView
        android:id="@+id/phonePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/five_dp"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/twenty_dp"
        tools:text="$ 1599" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:background="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:text="@string/billing_info"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_dp"
        tools:text="Customer Name: " />

    <TextView
        android:id="@+id/customerAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_dp"
        tools:text="Customer Address: " />

    <TextView
        android:id="@+id/customerCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_dp"
        tools:text="Customer City: " />

    <TextView
        android:id="@+id/customerPostalCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_dp"
        tools:text="Customer Postal Code: " />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/orderPlaceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/sixteen_dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/twenty_dp"
            android:text="@string/place_order" />

    </RelativeLayout>

</LinearLayout>